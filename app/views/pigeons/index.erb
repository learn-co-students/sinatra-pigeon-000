<%= erb :'layouts/_header' %>

  <h1>Pigeons</h1>
  
  <!-- show a table that lists all pigeons here -->
  <table>
  	<tr>
  		<th>Pigeon</th>
  		<th>Color</th>
  		<th>Gender</th>
  		<th>Lives</th>
  		<th>Edit</th>
  		<th>Remove</th>
  	</tr>
  	<% Pigeon.all.each do |pigeon| %>
      <tr>
      	<td><a href='<%= "/pigeons/#{pigeon.id}" %>'><%= pigeon.name %></a></td>
      	<td><%= pigeon.color %></td>
      	<td><%= pigeon.gender %></td>
      	<td><%= pigeon.lives %></td>
      	<td>
      		<form action='<%= "/pigeons/#{pigeon.id}/edit" %>' method='GET'>
      			<input type='submit' value='...'>
      		</form>
      	</td>
      	<td>
      		<form action='<%= "/pigeons/#{pigeon.id}" %>' method='POST'>
      			<input name='_method' type='hidden' value='DELETE'>
      			<input type='submit' value='X'>
      		</form>
      	</td>
      </tr>
  	<% end %>
  </table>

  <a class="button" href="/pigeons/new">New Pigeon</a>
  
<%= erb :'layouts/_footer' %>