<%= erb :'layouts/_header' %>

<h1>Edit Pigeon</h1>

<!-- form goes here -->
<form action='<%= "/pigeons/#{@pigeon.id}" %>' method='POST'>
	<input name='_method' type='hidden' value='PATCH'>
	Name: <input name='name' value='<%= @pigeon.name %>'>
	Color: <input name='color' value='<%= @pigeon.color %>'>
	Gender: <input name='gender' value='<%= @pigeon.gender %>'>
	Lives: <input name='lives' value='<%= @pigeon.lives %>'>
	<input type='submit' value='Save'>
</form>

<a class="button" href="/pigeons">Cancel</a>

<%= erb :'layouts/_footer' %>