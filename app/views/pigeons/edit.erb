<%= erb :'layouts/_header' %>

<h1>Edit Pigeon</h1>

<form action="/pigeons/<%=@pigeon.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label for="pigeon_name">Name</label><br>
  <input id="pigeon_name" type="text" name="pigeon[name]" value=<%=@pigeon.name%>><br>

  <label for="pigeon_color">Color</label><br>
  <input id="pigeon_color" type="text" name="pigeon[color]" value=<%=@pigeon.color%>><br>

  <label for="pigeon_gender">Gender</label><br>
  <input id="pigeon_gender" type="text" name="pigeon[gender]" value=<%=@pigeon.gender%>><br>

  <label for="pigeon_lives">Lives</label><br>
  <input id="pigeon_lives" type="text" name="pigeon[lives]" value=<%=@pigeon.lives%>><br>

  <input type="submit" value="Edit Pigeon">
</form>

<a class="button" href="/pigeons">Cancel</a>

<%= erb :'layouts/_footer' %>
