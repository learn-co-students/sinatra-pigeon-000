<%= erb :'layouts/_header' %>

<h1>Edit Pigeon</h1>

<form action="<%= "/save/#{@pigeon.id}" %>" method="POST">
<input type="hidden" name"_method" value="PATCH">
<label for="name">Edit Name:</label>
<input type="text" name="name" value="<%= @pigeon.name %>">
<label for="color">Edit Color:</label>
<input type="text" name="color" value="<%= @pigeon.color %>">
<label for="gender">Edit Gender:</label>
<input type="text" name="gender" value="<%= @pigeon.gender %>">
<label for="lives">Edit Origin:</label>
<input type="text" name="lives" value="<%= @pigeon.lives %>">
<input type="submit" value="Update">
</form>

<a class="button" href="/pigeons">Cancel</a>

<%= erb :'layouts/_footer' %>